{
  "manifest_version": 3,
  "name": "YouTube Focus Guard",
  "version": "1.0",
  "description": "Alerts when watching non-educational YouTube videos outside allowed hours.",
  "permissions": ["tabs", "notifications", "tts"],
  "host_permissions": ["http://localhost:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/embed/*", 
                  "*://www.youtube.com/watch*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icons/Yt.png"
  }
}
